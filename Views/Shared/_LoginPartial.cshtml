@using DemoBookStore.Models;
@using Microsoft.AspNetCore.Identity;

@inject SignInManager<UserModel> signInManager;

<ul class="navbar-nav ms-auto">
	@if (signInManager.IsSignedIn(User))
	{
		<li>
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
		</li>

		<li>
			<a class="nav-link text-dark" asp-controller="OrderSession" asp-action="Index">My orders</a>
		</li>

		<li>
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Remove">Remove</a>
		</li>
	}
	else
	{
		<li>
			<a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
		</li>

		<li>
			<a class="nav-link text-dark" asp-controller="User" asp-action="Create">Register</a>
		</li>

		<li>
			<a class="nav-link" style="color:red;"asp-controller="Account" asp-action="Remove">Remove my account</a>
		</li>
	}
</ul>